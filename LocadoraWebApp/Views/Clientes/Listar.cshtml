@model IEnumerable<LocadoraWebApp.Models.ListarClientesViewModel>

@{
ViewBag.Title = "Listagem de Clientes";
}

<div class="col">
    <a class="btn btn-primary px-4 mt-3" asp-controller="Clientes" asp-action="Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Novo Cliente
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var clienteVm in Model)
        {
        <div class="card col-lg-4 col-xl-3 px-0">
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h5 class="p-0">@clienteVm.Nome</h5>

                <div class="text-end d-flex align-items-center gap-3">
                    <a title="Detalhes"
                       class="text-info-emphasis fs-5"
                       href="/Clientes/Detalhes/@clienteVm.Id">
                        <i class="bi bi-search"></i>
                    </a>
                    <a title="Editar"
                       class="text-info-emphasis fs-5"
                       href="/Clientes/Editar/@clienteVm.Id">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a title="Excluir"
                       class="text-info-emphasis fs-5" href="/Clientes/Excluir/@clienteVm.Id">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </div>
            </div>

            <div class="card-body">
                <h5 class="card-title">@clienteVm.Nome</h5>
                <p class="card-text">
                    Tipo de Cadastro: @clienteVm.TipoCadastro <br/>
                    Número do Documento: @clienteVm.NumeroDocumento <br/>
                    Telefone: @clienteVm.Telefone <br/>
                    Email: @clienteVm.Email
                </p>
            </div>
        </div>
        }
    </div>
</div>