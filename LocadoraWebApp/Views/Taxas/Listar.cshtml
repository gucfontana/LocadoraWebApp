@model IEnumerable<LocadoraWebApp.Models.ListarTaxasViewModel>

@{
ViewBag.Title = "Listagem de Taxas";
}

<div class="col">

    <a class="btn btn-primary px-4 mt-3" asp-controller="Taxas" asp-action="Inserir">
        <i class="bi bi-circle-add"></i>
        Inserir Nova Taxa
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var taxaVm in Model)
        {
        <div class="card col-lg-4 col-xl-3 px-0">
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h5 class="p-0">@taxaVm.Id</h5>

                <div class="text-end d-flex align-items-center gap-3">
                    <a title="Detalhes"
                       class="text-info-emphasis fs-5"
                       href="/Taxas/Detalhes/@taxaVm.Id">
                        <i class="bi bi-search"></i>
                    </a>
                    <a title="Editar"
                       class="text-info-emphasis fs-5"
                       href="/Taxas/Editar/@taxaVm.Id">
                        <i class="bi bi-pencil-fill"></i>
                    </a>
                    <a title="Excluir"
                       class="text-info-emphasis fs-5" href="/Taxas/Excluir/@taxaVm.Id">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                </div>
            </div>

            <div class="card-body">
                <h5 class="card-title">@taxaVm.Nome</h5>
                <p class="card-text">
                    Valor: @taxaVm.Valor.ToString("C") <br/>
                    Tipo de Cobrança: @taxaVm.TipoCobranca
                </p>
            </div>
        </div>
        }
    </div>
</div>