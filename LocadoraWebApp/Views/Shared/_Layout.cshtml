@using LocadoraWebApp.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    MensagemViewModel? mensagem = ViewBag.Mensagem ?? null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title - Locadora De Veículos</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/LocadoraDeVeiculos.WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-semibold fs-4" asp-controller="Home" asp-action="Index">Locadora de Veículos</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1 align-items-center justify-content-end">
                    @if (User.Identity is not null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="GrupoVeiculos" asp-action="Listar">Grupos de
                                Veículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Veiculos" asp-action="Listar">Veículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="PlanoCobrancas" asp-action="Listar">Planos de
                                Cobrança</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Taxas" asp-action="Listar">Taxas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Clientes" asp-action="Listar">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Condutores" asp-action="Listar">Condutores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Alugueis" asp-action="Listar">Locações</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Combustiveis" asp-action="Configurar"><i
                                                                                                                    class="bi bi-gear-fill"></i></a>
                        </li>

                        <form asp-controller="Autenticacao" asp-action="Logout" class="d-flex gap-1 ms-4">
                            <a href="#" class="btn btn-outline-primary px-5">
                                <i class="bi bi-person-vcard-fill"></i>
                                @User.Identity.Name
                            </a>

                            <button class="btn btn-primary px-3">
                                <i class="bi bi-box-arrow-right"></i>
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="col-md-3 text-end">
                            <a asp-controller="Autenticacao" asp-action="Login" class="btn btn-outline-primary me-2 px-4">Login</a>
                            <a asp-controller="Autenticacao" asp-action="Registrar" class="btn btn-outline-primary px-4">Registro</a>
                        </div>
                    }
                </ul>
            </div>

        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        <h1 class="fw-semibold mt-4">@ViewBag.Title</h1>
        <hr>
        <partial name="_Mensagem" model="mensagem"></partial>

        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Locadora de Veículos
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
